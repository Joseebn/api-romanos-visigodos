{
  "openapi": "3.0.0",
  "info": {
    "title": "API website Romanos y visigodos",
    "version": "1.0.0",
    "description": "Documentation API website Romanos y visigodos."
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Enter your JWT obtained from /auth/login."
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "User authentication",
        "description": "Receives email and password, validates credentials and returns a JWT token along with user information",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "user@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful login. Returns JWT token and user data.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "name": { "type": "string", "example": "Juan PÃ©rez" },
                        "email": { "type": "string", "example": "user@example.com" },
                        "role": { "type": "string", "example": "admin" }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Incorrect credentials",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Invalid credentials"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Request body validation errors",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "object",
                      "example": {
                        "email": "The email field is required",
                        "password": "The password field is required"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/site/dictionary": {
      "get": {
        "summary": "Get all terms",
        "security": [
          { "bearerAuth": [] }
        ],
        "tags": ["Site"],
        "responses": {
          "200": {
            "description": "List of terms",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "term": { "type": "string" },
                      "definition": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/site/dictionary/{slug}": {
      "get": {
        "summary": "Get a term by slug",
        "security": [
          { "bearerAuth": [] }
        ],
        "tags": ["Site"],
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Found term",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "term_path": { "type": "string" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Term not found"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/site/gallery": {
      "get": {
        "summary": "Get all images",
        "security": [
          { "bearerAuth": [] }
        ],
        "tags": ["Site"],
        "responses": {
          "200": {
            "description": "List of images",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "description": { "type": "string" },
                      "image_path": { "type": "string" },
                      "image_id": { "type": "string" },
                      "type": { "type": "string" }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/site/button-event/{name}/clicks": {
      "patch": {
        "summary": "Register button click event",
        "security": [
          { "bearerAuth": [] }
        ],
        "tags": ["Site"],
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "204": {
            "description": "Button click event registered successfully"
          },
          "400": {
            "description": "Invalid slug format",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "error" },
                    "message": { "type": "string", "example": "Invalid slug format" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Button not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "error" },
                    "message": { "type": "string", "example": "Button not found" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  }
}
